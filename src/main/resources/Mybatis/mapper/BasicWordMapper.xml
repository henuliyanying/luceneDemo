<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mybatisdemo.mapper.BasicWordMapper">

    <resultMap id="BasicAndStageMap" type="com.example.mybatisdemo.eneities.BasicWord">

        <result column="w_id" property="w_id"/>
        <result column="w_spell" property="w_spell"/>
        <result column="w_type" property="w_type"/>
        <result column="w_mean" property="w_mean"/>
        <result column="w_pronunce" property="w_pronunce"/>
        <!--<result column="isDeleted" property="isDeleted"/>
        <result column="remarks" property="remarks"/>-->
<!--javaType="java.util.List"-->
        <association property="wordStage" javaType="com.example.mybatisdemo.eneities.WordStage" >
            <id column="id" property="id"/>
            <!--<result column="w_id" property="w_id"/>-->
            <result column="w_stage" property="w_stage"/>
            <!--<result column="w_times" property="w_times"/>-->
            <result column="w_frequency" property="w_frequency"/>
            <!--<result column="w_creater" property="w_creater"/>-->
            <!--<result column="create_time" property="create_time"/>-->
            <!--<result column="check_time" property="check_time"/>-->
        </association>
    </resultMap>


    
    <select id="getAllBasicWord" resultType="BasicWord">
        select * from basicword_table
    </select>
    <!--resultMap="BasicAndStageMap"-->
    <select id="getWfreBySpellAndStage" resultMap="BasicAndStageMap">
select b.id,a.w_id,a.w_spell,a.w_type,a.w_mean,a.w_pronunce,b.w_frequency,b.w_stage from basicword_table a  join wordstage_table b on a.w_id = b.w_id    </select>
</mapper>